<h2>お知らせ</h2>
<ul>
  <% @notifications.each do |notification| %>
  <hr>
    <li>
      <span><%= notification.read %></span>
      <p>
        <%= notification.comment.user.try(:name) %>さんが
        あなたのレシピ（<%= link_to "#{notification.comment.recipe.title}", recipe_path(notification.comment.recipe, notification_id: notification.id) %>）にコメントしました。
      </p>
      <p><%= notification.created_at %></p>
    </li>
  <% end %>
</ul>
