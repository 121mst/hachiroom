<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><h4><strong><%= recipe.id %></strong></h4></td>
        <%= link_to recipe_path(recipe) do %>
          <td><h4><strong><%= recipe.title %></strong></h4></td><!--タイトル-->
        <% end %>
        <td><%= link_to '詳細', recipe_path(recipe) %></td>
        <td><h4><strong><%= recipe.knack %></strong></h4></td> <!--コツ-->
        <td><%= profile_img(recipe.user) %></td><!--ユーザ画像-->
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
